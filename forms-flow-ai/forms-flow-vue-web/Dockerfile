# base image
#FROM docker-remote.artifacts.developer.gov.bc.ca/node:12.4.0-alpine as build-stage
FROM node:14.17.0-alpine as build-stage
WORKDIR /app


ARG VUE_APP_KEYCLOAK_URL
ARG VUE_APP_KEYCLOAK_URL_REALM
ARG VUE_APP_KEYCLOAK_CLIENT_ID
ARG VUE_APP_BPM_URL
ARG VUE_APP_FORM_IO_API_URL
ARG VUE_APP_FORM_IO_PROJECT_URL
ARG VUE_APP_FORM_IO_RESOURCE_ID
ARG VUE_APP_FORM_IO_REVIEWER_ID
ARG VUE_APP_FORM_IO_REVIEWER
ARG VUE_APP_FORM_FLOW_API_URL
ARG VUE_APP_FORM_FLOW_URL
ARG VUE_APP_FORMIO_ROLES
ARG VUE_APP_WEBSOCKET_ENCRYPT_KEY
ARG VUE_APP_INTAKE_FILTER_LIST
ARG VUE_APP_ISSUE_FILTER_LIST
ARG VUE_APP_FORMIO_JWT_SECRET
ARG VUE_APP_MINIMUM_TOKEN_VALIDITY
ARG VUE_APP_RENEW_AUTH_TOKEN_TIMER


ENV VUE_APP_KEYCLOAK_URL: ${VUE_APP_KEYCLOAK_URL}
ENV VUE_APP_KEYCLOAK_URL_REALM ${VUE_APP_KEYCLOAK_URL_REALM}
ENV VUE_APP_KEYCLOAK_CLIENT_ID ${VUE_APP_KEYCLOAK_CLIENT_ID}
ENV VUE_APP_BPM_URL ${VUE_APP_BPM_URL}
ENV VUE_APP_FORM_IO_API_URL ${VUE_APP_FORM_IO_API_URL}
ENV VUE_APP_FORM_IO_PROJECT_URL ${VUE_APP_FORM_IO_PROJECT_URL}
ENV VUE_APP_FORM_IO_RESOURCE_ID ${VUE_APP_FORM_IO_RESOURCE_ID}
ENV VUE_APP_FORM_IO_REVIEWER_ID ${VUE_APP_FORM_IO_REVIEWER_ID}
ENV VUE_APP_FORM_IO_REVIEWER ${VUE_APP_FORM_IO_REVIEWER}
ENV VUE_APP_FORM_FLOW_API_URL ${VUE_APP_FORM_FLOW_API_URL}
ENV VUE_APP_FORM_FLOW_URL ${VUE_APP_FORM_FLOW_URL}
ENV VUE_APP_FORMIO_ROLES ${VUE_APP_FORMIO_ROLES}
ENV VUE_APP_WEBSOCKET_ENCRYPT_KEY ${VUE_APP_WEBSOCKET_ENCRYPT_KEY}
ENV VUE_APP_INTAKE_FILTER_LIST ${VUE_APP_INTAKE_FILTER_LIST}
ENV VUE_APP_ISSUE_FILTER_LIST ${VUE_APP_ISSUE_FILTER_LIST}
ENV VUE_APP_FORMIO_JWT_SECRET ${VUE_APP_FORMIO_JWT_SECRET}
ENV VUE_APP_MINIMUM_TOKEN_VALIDITY ${VUE_APP_MINIMUM_TOKEN_VALIDITY}
ENV VUE_APP_RENEW_AUTH_TOKEN_TIMER ${VUE_APP_RENEW_AUTH_TOKEN_TIMER}

COPY package*.json ./
RUN npm install
COPY ./ .
RUN npm run build

FROM nginx as production-stage
RUN mkdir /app
COPY --from=build-stage /app/dist /usr/share/nginx/html
COPY --from=build-stage /app/nginx.conf /etc/nginx/nginx.conf
EXPOSE 4000:8080
CMD ["nginx", "-g", "daemon off;"]
